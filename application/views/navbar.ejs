  <div class="row">
    <div class="col pb-2">
      <div class="card border-light">
        <div class="card-body row">
          <div class="col fs-2" style="margin: auto; white-space: normal; overflow-wrap: anywhere;">
            <% if (Announcement != "" ) {%>
            【公告】 <%= Announcement %>
            <% } else { %>
            【暫無公告】
            <% } %>
          </div>
          <div class="col-auto">
            <a class="button logout fs-2" href="/logout">登出</a>

            <% if ((level == "舍監" || level == "管理員")  && route != "/manage") { %>
