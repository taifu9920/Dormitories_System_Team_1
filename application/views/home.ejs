<% layout('layout') %>

<%- include header %>

<%
function timestampConvert(date){
  return new Date(date).toLocaleString('zh-TW').replace(" ", "\n");
}
%>

<div id="content" class="container-fluid">
  <div class="row">
    <div class="col">
      <div class="card border-light">
        <div class="card-header bg-transparent border-light text-center fs-2 d-flex">
          <div class="col ms-md-auto d-flex align-items-center justify-content-center">住宿申請</div>
          <% if (level=="舍監" || level=="管理員") { %>
          <div class="col-auto ms-md-auto">
            <button id="editRulesBtn" onclick="editRules()" class="button edit" style="margin:0;">
              <i class="material-icons fs-2">edit</i>
            </button>
            <button id="saveRulesBtn" onclick="saveRules()" class="button save" style="display:none">
              <i class="material-icons fs-2">save</i>
            </button>
          </div>
          <% } %>
        </div>
        <% if (registers[0] == null ) {%>
        <div class="card-body">
          <div id="RulesArea">
            <%= Rules %>
          </div>
          <div id="editorArea" style="display:none;">
            <div id="editor">
              <p><%= Rules %></p>
            </div>
            <script>
              ClassicEditor
                .create(document.querySelector('#editor'))
                .catch(error => {
                  console.error(error);
                });
                $("#editor").hide();
            </script>
          </div>
        </div>
        <div class="card-footer bg-transparent border-light" style="padding: 0;">
          <form method="post" action="/register">
            <div class="input-group flex-nowrap" style="margin: -1px; width:unset;">
              <label class="input-group-text bg-transparent col" style="border-top-left-radius: 0;" for="a">
                <input class="form-check-input mt-0" type="checkbox" value="" id="a" required>
                <span style="margin-left: 6px;">我已詳細閱讀住宿申請說明並同意</span>

              </label>
              <input type="submit" class="btn btn-outline-light form-control col-auto" style="border-top-right-radius: 0; max-width:60px;" value="申請" />
            </div>
          </form>
        </div>
        <% } else { %>
        <div class="card-body">
          <%= registers[0].Approved %>
          <%= registers[0].Payment %>
        </div>
        <% } %>
      </div>
    </div>
    <div class="col">
      <div class="card border-light">
        <div class="card-header bg-transparent border-light text-center fs-2">留言板</div>
        <div class="card-body container-fluid hidescrollbar overflow-scroll d-flex flex-column-reverse" style="padding: 0!important; max-height: 380px; margin:-1px; width:unset;">
          <% for ( var i=0 ; i < comments.length ; i++){ %>
          <div class="input-group flex flex-nowrap" style="margin:0 -1px;width:unset;">
            <span class="input-group-text col-auto bg-transparent" style="white-space: break-spaces; overflow-wrap: anywhere;border-radius: 0;" id="addon-wrapping"><%= comments[i].S_ID %></span>
            <span class="input-group-text col bg-transparent" style="white-space: break-spaces; overflow-wrap: anywhere;border-radius: 0;" id="addon-wrapping"><%= comments[i].Content %></span>
            <span class="input-group-text col-auto bg-transparent" style="white-space: break-spaces; overflow-wrap: anywhere;border-radius: 0;" id="addon-wrapping"><%= timestampConvert(comments[i].When) %></span>
          </div>
          <% } %>
        </div>
        <div class="card-footer bg-transparent border-light" style="padding: 0!important;">
          <form action="/comm" method="post" class="row">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="col flex-nowrap">
              <div class="input-group" style="margin: -1px;width: unset;">
                <button class="btn btn-outline-light fs-2" type="button" id="button-addon2" style="border-top-left-radius: 0;"><%= username %></button>
                <div class="form-floating">
                  <input name="Content" type="text" class="form-control fs-2" id="comment" placeholder="留言" required>
                  <label for="comment" class="fs-2">留言</label>
                </div>
                <input class="btn btn-outline-light fs-2" type="submit" id="button-addon2" style="border-top-right-radius: 0;" value="送出"></button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function editRules() {
    $("#editorArea").show();
    $("#RulesArea").hide();
    $("#editRulesBtn").hide();
    $("#saveRulesBtn").show();
  }

  function saveRules() {
    if ($("#Announcement").text() == $("#anno")[0].value) {
      $("#editorArea").hide();
      $("#RulesArea").show();
      $("#editRulesBtn").show();
      $("#saveRulesBtn").hide();
    } else {
      $("#UpdateAnno").submit();
    }
  }
</script>